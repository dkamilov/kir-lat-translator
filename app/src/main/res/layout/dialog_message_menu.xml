<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center">

   <TextView
       android:id="@+id/menu_copy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:drawableStart="@drawable/ic_copy"
       android:text="@string/title_copy"
       style="@style/PopupMenuItem"/>

    <TextView
        android:id="@+id/menu_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_share"
        android:text="@string/title_share"
        style="@style/PopupMenuItem"/>

    <TextView
        android:id="@+id/menu_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_trash"
        android:text="@string/title_delete"
        style="@style/PopupMenuItem"/>

    <TextView
        android:id="@+id/menu_add_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_favorite"
        android:text="@string/title_add_favorite"
        style="@style/PopupMenuItem"/>

</LinearLayout>